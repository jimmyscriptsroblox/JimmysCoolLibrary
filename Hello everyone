local JimmysCoolLibrary = {}

function JimmysCoolLibrary:CreateHub(title)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local mainFrame = Instance.new("Frame", screenGui)
    mainFrame.Size = UDim2.new(0, 600, 0, 400)
    mainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
    mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    mainFrame.BorderSizePixel = 0
    mainFrame.Active = true
    mainFrame.Draggable = true

    -- Title Bar
    local titleBar = Instance.new("Frame", mainFrame)
    titleBar.Size = UDim2.new(1, 0, 0, 25)
    titleBar.Position = UDim2.new(0, 0, 0, 0)
    titleBar.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    titleBar.BorderSizePixel = 0

    local titleLabel = Instance.new("TextLabel", titleBar)
    titleLabel.Size = UDim2.new(1, -60, 1, 0)
    titleLabel.Position = UDim2.new(0, 60, 0, 0)
    titleLabel.Text = title or "Hub"
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextSize = 18
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- Minimize Button
    local minimizeButton = Instance.new("TextButton", titleBar)
    minimizeButton.Size = UDim2.new(0, 30, 0, 25)
    minimizeButton.Position = UDim2.new(1, -90, 0, 0)
    minimizeButton.Text = "-"
    minimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    minimizeButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    minimizeButton.BorderSizePixel = 0
    minimizeButton.AutoButtonColor = false
    minimizeButton.TextXAlignment = Enum.TextXAlignment.Left

    local isMinimized = false
    minimizeButton.MouseButton1Click:Connect(function()
        if isMinimized then
            mainFrame.Size = UDim2.new(0, 600, 0, 400)
            minimizeButton.Text = "-"
            isMinimized = false
            tabButtonHolder.Visible = true
        else
            mainFrame.Size = UDim2.new(0, 600, 0, 25)
            minimizeButton.Text = "+"
            isMinimized = true
            tabButtonHolder.Visible = false
        end
    end)

    -- Close Button
    local closeButton = Instance.new("TextButton", titleBar)
    closeButton.Size = UDim2.new(0, 30, 0, 25)
    closeButton.Position = UDim2.new(1, -30, 0, 0)
    closeButton.Text = "Ã—"
    closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    closeButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    closeButton.BorderSizePixel = 0
    closeButton.AutoButtonColor = false
    closeButton.TextXAlignment = Enum.TextXAlignment.Left
    closeButton.MouseButton1Click:Connect(function()
        screenGui:Destroy()
    end)

    -- Tab Buttons Holder
    local tabButtonHolder = Instance.new("Frame", mainFrame)
    tabButtonHolder.Size = UDim2.new(0, 150, 1, -25)
    tabButtonHolder.Position = UDim2.new(0, 0, 0, 25)
    tabButtonHolder.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    tabButtonHolder.BorderSizePixel = 0
    tabButtonHolder.Visible = true  -- Initially visible

    -- Tabs Holder
    local tabHolder = Instance.new("Frame", mainFrame)
    tabHolder.Size = UDim2.new(1, -150, 1, -25)
    tabHolder.Position = UDim2.new(0, 150, 0, 25)
    tabHolder.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    tabHolder.BorderSizePixel = 0

    local window = {frame = mainFrame, tabs = {}, tabButtonHolder = tabButtonHolder}

    function window:AddTab(name)
        local tabIndex = #self.tabs + 1

        local tabButton = Instance.new("TextButton", self.tabButtonHolder)
        tabButton.Text = name
        tabButton.Size = UDim2.new(1, 0, 0, 50)
        tabButton.Position = UDim2.new(0, 0, 0, (tabIndex - 1) * 55)
        tabButton.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
        tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        tabButton.BorderSizePixel = 0
        tabButton.TextXAlignment = Enum.TextXAlignment.Left

        local tabScrollFrame = Instance.new("ScrollingFrame", tabHolder)
        tabScrollFrame.Size = UDim2.new(1, 0, 1, 0)
        tabScrollFrame.Position = UDim2.new(0, 0, 0, 0)
        tabScrollFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        tabScrollFrame.BorderSizePixel = 0
        tabScrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
        tabScrollFrame.ScrollBarThickness = 10
        tabScrollFrame.Visible = false  -- Initially hidden

        tabButton.MouseButton1Click:Connect(function()
            for _, tab in pairs(self.tabs) do
                tab.scrollFrame.Visible = false
            end
            tabScrollFrame.Visible = true
        end)

        local tab = {scrollFrame = tabScrollFrame, elements = {}}

        function tab:AddText(content)
            local textLabel = Instance.new("TextLabel", self.scrollFrame)
            textLabel.Text = content
            textLabel.Size = UDim2.new(1, -10, 0, 50)  -- Adjusted size to fit within scroll frame
            textLabel.Position = UDim2.new(0, 5, 0, #self.elements * 60)
            textLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            textLabel.BorderSizePixel = 0
            textLabel.TextWrapped = true  -- Allow text to wrap within the label
            textLabel.TextXAlignment = Enum.TextXAlignment.Left
            table.insert(self.elements, textLabel)

            -- Update the canvas size to fit all elements
            self.scrollFrame.CanvasSize = UDim2.new(0, 0, 0, #self.elements * 60)
        end

        function tab:AddButton(buttonText, callback)
            local button = Instance.new("TextButton", self.scrollFrame)
            button.Text = buttonText
            button.Size = UDim2.new(1, -10, 0, 50)  -- Adjusted size to fit within scroll frame
            button.Position = UDim2.new(0, 5, 0, #self.elements * 60)
            button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)  -- Slightly lighter than the text label
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
            button.BorderSizePixel = 0
            button.TextWrapped = true  -- Allow text to wrap within the button
            button.AutoButtonColor = false
            button.TextXAlignment = Enum.TextXAlignment.Left
            button.MouseButton1Click:Connect(callback)
            table.insert(self.elements, button)

            -- Update the canvas size to fit all elements
            self.scrollFrame.CanvasSize = UDim2.new(0, 0, 0, #self.elements * 60)
        end

        function tab:AddList(listText, items)
            local listLabel = Instance.new("TextLabel", self.scrollFrame)
            listLabel.Text = listText
            listLabel.Size = UDim2.new(1, -10, 0, 50)
            listLabel.Position = UDim2.new(0, 5, 0, #self.elements * 60)
            listLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            listLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            listLabel.BorderSizePixel = 0
            listLabel.TextWrapped = true
            listLabel.TextXAlignment = Enum.TextXAlignment.Left

            local toggleButton = Instance.new("TextButton", self.scrollFrame)
            toggleButton.Text = "+"
            toggleButton.Size = UDim2.new(0, 50, 0, 50)
            toggleButton.Position = UDim2.new(1, -55, 0, #self.elements * 60)
            toggleButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
            toggleButton.BorderSizePixel = 0
            toggleButton.TextXAlignment = Enum.TextXAlignment.Center

            local listItems = {}
            local isExpanded = false
            toggleButton.MouseButton1Click:Connect(function()
                if isExpanded then
                    for _, item in ipairs(listItems) do
                        item:Destroy()
                    end
                    listItems = {}
                    isExpanded = false
                    toggleButton.Text = "+"
                else
                    for i, itemText in ipairs(items) do
                        local itemButton = Instance.new("TextButton", self.scrollFrame)
                        itemButton.Text = itemText
                        itemButton.Size = UDim2.new(1, -10, 0, 50)
                        itemButton.Position = UDim2.new(0, 5, 0, (#self.elements + i) * 60)
                        itemButton.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
                        itemButton.TextColor3 = Color3.fromRGB(255, 255, 255)
                        itemButton.BorderSizePixel = 0
                        itemButton.TextWrapped = true
                        itemButton.TextXAlignment = Enum.TextXAlignment.Left
                        table.insert(listItems, itemButton)

                        itemButton.MouseButton1Click:Connect(function()
                            print(itemText .. " button clicked")
                        end)
                    end
                    isExpanded = true
                    toggleButton.Text = "-"
                end
            end)

            table.insert(self.elements, listLabel)
            table.insert(self.elements, toggleButton)

            -- Update the canvas size to fit all elements
            self.scrollFrame.CanvasSize = UDim2.new(0, 0, 0, #self.elements * 60)
        end

        function tab:AddInput(labelText, callback)
            local label = Instance.new("TextLabel", self.scrollFrame)
            label.Text = labelText
            label.Size = UDim2.new(1, -10, 0, 50)
            label.Position = UDim2.new(0, 5, 0, #self.elements * 60)
            label.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            label.TextColor3 = Color3.fromRGB(255, 255, 255)
            label.BorderSizePixel = 0
            label.TextWrapped = true
            label.TextXAlignment = Enum.TextXAlignment.Left

            local inputBox = Instance.new("TextBox", self.scrollFrame)
            inputBox.Size = UDim2.new(1, -10, 0, 50)
            inputBox.Position = UDim2.new(0, 5, 0, (#self.elements + 1) * 60)
            inputBox.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
            inputBox.TextColor3 = Color3.fromRGB(255, 255, 255)
            inputBox.BorderSizePixel = 0
            inputBox.PlaceholderText = "Enter text here..."
            inputBox.FocusLost:Connect(function(enterPressed)
                if enterPressed then
                    callback(inputBox.Text)
                end
            end)

            table.insert(self.elements, label)
            table.insert(self.elements, inputBox)

            -- Update the canvas size to fit all elements
            self.scrollFrame.CanvasSize = UDim2.new(0, 0, 0, #self.elements * 60)
        end

        function tab:AddSlider(sliderText, min, max, callback)
            local sliderLabel = Instance.new("TextLabel", self.scrollFrame)
            sliderLabel.Text = sliderText
            sliderLabel.Size = UDim2.new(1, -10, 0, 50)
            sliderLabel.Position = UDim2.new(0, 5, 0, #self.elements * 60)
            sliderLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            sliderLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            sliderLabel.BorderSizePixel = 0
            sliderLabel.TextWrapped = true
            sliderLabel.TextXAlignment = Enum.TextXAlignment.Left

            local sliderFrame = Instance.new("Frame", self.scrollFrame)
            sliderFrame.Size = UDim2.new(1, -10, 0, 50)
            sliderFrame.Position = UDim2.new(0, 5, 0, (#self.elements + 1) * 60)
            sliderFrame.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
            sliderFrame.BorderSizePixel = 0

            local sliderBar = Instance.new("Frame", sliderFrame)
            sliderBar.Size = UDim2.new(0, 0, 1, 0)
            sliderBar.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
            sliderBar.BorderSizePixel = 0

            local sliderButton = Instance.new("TextButton", sliderFrame)
            sliderButton.Size = UDim2.new(0, 20, 1, 0)
            sliderButton.Position = UDim2.new(0, -10, 0, 0)
            sliderButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            sliderButton.BorderSizePixel = 0
            sliderButton.AutoButtonColor = false
            sliderButton.Text = ""

            local function updateSlider(input)
                local relativePos = (input.Position.X - sliderFrame.AbsolutePosition.X) / sliderFrame.AbsoluteSize.X
                local sliderSize = math.clamp(relativePos, 0, 1)
                sliderButton.Position = UDim2.new(sliderSize, -10, 0, 0)
                sliderBar.Size = UDim2.new(sliderSize, 0, 1, 0)
                local value = math.floor(min + (sliderSize * (max - min)))
                callback(value)
            end

            sliderButton.MouseButton1Down:Connect(function()
                local moveConnection, releaseConnection

                moveConnection = game:GetService("UserInputService").InputChanged:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseMovement then
                        updateSlider(input)
                    end
                end)

                releaseConnection = game:GetService("UserInputService").InputEnded:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then
                        moveConnection:Disconnect()
                        releaseConnection:Disconnect()
                    end
                end)
            end)

            table.insert(self.elements, sliderLabel)
            table.insert(self.elements, sliderFrame)

            -- Update the canvas size to fit all elements
            self.scrollFrame.CanvasSize = UDim2.new(0, 0, 0, (#self.elements + 1) * 60)
        end

        table.insert(self.tabs, tab)

        -- Auto-select the first tab
        if tabIndex == 1 then
            tabScrollFrame.Visible = true
        end

        return tab
    end

    return window
end

return JimmysCoolLibrary
