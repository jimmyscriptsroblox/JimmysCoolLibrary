local JimmysCoolLibrary = {}

local themes = {
    PoolTheme = {
        BackgroundColor3 = Color3.fromRGB(173, 216, 230), -- Light blue
        TextColor3 = Color3.fromRGB(0, 0, 0), -- Black text
        Texture = "rbxassetid://5307827373", -- Water texture ID
        Transparency = 0.8
    },
    MangaTheme = {
        BackgroundColor3 = Color3.fromRGB(245, 245, 245), -- White
        TextColor3 = Color3.fromRGB(128, 128, 128), -- Light grey text
    },
    DarkTheme = {
        BackgroundColor3 = Color3.fromRGB(35, 35, 35), -- Dark background
        TextColor3 = Color3.fromRGB(255, 255, 255), -- White text
    }
}

function JimmysCoolLibrary:ApplyTheme(frame, theme)
    if theme and themes[theme] then
        frame.BackgroundColor3 = themes[theme].BackgroundColor3
        frame.BackgroundTransparency = themes[theme].Transparency or 0

        if themes[theme].Texture then
            local texture = Instance.new("ImageLabel", frame)
            texture.Image = themes[theme].Texture
            texture.Size = UDim2.new(1, 0, 1, 0)
            texture.BackgroundTransparency = themes[theme].Transparency or 0
            texture.ZIndex = -1
        end

        for _, child in pairs(frame:GetDescendants()) do
            if child:IsA("TextLabel") or child:IsA("TextButton") or child:IsA("TextBox") then
                child.TextColor3 = themes[theme].TextColor3
            end
        end
    end
end

function JimmysCoolLibrary:CreateHub(title, theme)
    local screenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
    local mainFrame = Instance.new("Frame", screenGui)
    mainFrame.Size = UDim2.new(0, 600, 0, 400)
    mainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
    mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    mainFrame.BorderSizePixel = 0
    mainFrame.Active = true
    mainFrame.Draggable = true

    local titleBar = Instance.new("TextLabel", mainFrame)
    titleBar.Size = UDim2.new(1, 0, 0, 25)
    titleBar.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    titleBar.BorderSizePixel = 0
    titleBar.Text = title or "Hub"
    titleBar.TextColor3 = Color3.fromRGB(255, 255, 255)

    local tabButtonHolder = Instance.new("Frame", mainFrame)
    tabButtonHolder.Size = UDim2.new(1, 0, 0, 30)
    tabButtonHolder.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    tabButtonHolder.BorderSizePixel = 0

    local tabHolder = Instance.new("Frame", mainFrame)
    tabHolder.Size = UDim2.new(1, -20, 1, -60)
    tabHolder.Position = UDim2.new(0, 10, 0, 40)
    tabHolder.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    tabHolder.BorderSizePixel = 0

    local window = {frame = mainFrame, tabs = {}, tabButtonHolder = tabButtonHolder}

    function window:AddTab(name)
        local tabIndex = #self.tabs + 1

        local tabButton = Instance.new("TextButton", self.tabButtonHolder)
        tabButton.Text = name
        tabButton.Size = UDim2.new(0, 100, 0, 25)
        tabButton.Position = UDim2.new(0, (tabIndex - 1) * 105, 0, 0)
        tabButton.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
        tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        tabButton.BorderSizePixel = 0

        local tabScrollFrame = Instance.new("ScrollingFrame", tabHolder)
        tabScrollFrame.Size = UDim2.new(1, 0, 1, 0)
        tabScrollFrame.Position = UDim2.new(0, 0, 0, 0)
        tabScrollFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        tabScrollFrame.BorderSizePixel = 0
        tabScrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
        tabScrollFrame.ScrollBarThickness = 10

        tabButton.MouseButton1Click:Connect(function()
            for _, tab in pairs(self.tabs) do
                tab.scrollFrame.Visible = false
            end
            tabScrollFrame.Visible = true
        end)

        local tab = {scrollFrame = tabScrollFrame, elements = {}}

        function tab:AddText(content)
            local textLabel = Instance.new("TextLabel", self.scrollFrame)
            textLabel.Text = content
            textLabel.Size = UDim2.new(0, 300, 0, 50)
            textLabel.Position = UDim2.new(0.5, -150, 0, #self.elements * 60)
            textLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            textLabel.BorderSizePixel = 0
            table.insert(self.elements, textLabel)
        end

        function tab:AddButton(buttonText, callback)
            local button = Instance.new("TextButton", self.scrollFrame)
            button.Text = buttonText
            button.Size = UDim2.new(0, 300, 0, 50)
            button.Position = UDim2.new(0.5, -150, 0, #self.elements * 60)
            button.BackgroundColor3 = Color3.fromRGB(75, 75, 75)
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
            button.BorderSizePixel = 0
            button.MouseButton1Click:Connect(callback)
            table.insert(self.elements, button)
        end

        function tab:AddScroller(scrollerText, callback)
            local scrollerLabel = Instance.new("TextLabel", self.scrollFrame)
            scrollerLabel.Text = scrollerText
            scrollerLabel.Size = UDim2.new(0, 300, 0, 30)
            scrollerLabel.Position = UDim2.new(0.5, -150, 0, #self.elements * 60)
            scrollerLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            scrollerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            scrollerLabel.BorderSizePixel = 0
            table.insert(self.elements, scrollerLabel)

            local scroller = Instance.new("TextBox", self.scrollFrame)
            scroller.Text = "0"
            scroller.Size = UDim2.new(0, 300, 0, 30)
            scroller.Position = UDim2.new(0.5, -150, 0, #self.elements * 60)
            scroller.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
            scroller.TextColor3 = Color3.fromRGB(255, 255, 255)
            scroller.BorderSizePixel = 0
            scroller.FocusLost:Connect(function()
                callback(tonumber(scroller.Text))
            end)
            table.insert(self.elements, scroller)
        end

        function tab:AddScrollerWalkspeed(scrollerText, callback)
            self:AddScroller(scrollerText, function(value)
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
                callback(value)
            end)
        end

        function tab:AddScrollerJumppower(scrollerText, callback)
            self:AddScroller(scrollerText, function(value)
                game.Players.LocalPlayer.Character.Humanoid.JumpPower = value
                callback(value)
            end)
        end

        self.tabs[tabIndex] = tab
        if tabIndex == 1 then
            tabScrollFrame.Visible = true
        else
            tabScrollFrame.Visible = false
        end

        return tab
    end

    if theme then
        if theme == "default" then
            theme = "DarkTheme"
        end
        self:ApplyTheme(mainFrame, theme)
    end

    return window
end

return JimmysCoolLibrary
