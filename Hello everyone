local JimmysCoolLibrary = {}

JimmysCoolLibrary.Themes = {
    Dark = {
        MainFrame = Color3.fromRGB(35, 35, 35),
        TitleBar = Color3.fromRGB(45, 45, 45),
        TitleText = Color3.fromRGB(255, 255, 255),
        Button = Color3.fromRGB(55, 55, 55),
        ButtonText = Color3.fromRGB(255, 255, 255),
        ScrollFrame = Color3.fromRGB(35, 35, 35),
        Element = Color3.fromRGB(45, 45, 45),
        ElementText = Color3.fromRGB(255, 255, 255),
        ToggleOn = Color3.fromRGB(0, 255, 0),
        ToggleOff = Color3.fromRGB(255, 0, 0),
        ToggleButton = Color3.fromRGB(45, 45, 45)
    },
    Light = {
        MainFrame = Color3.fromRGB(245, 245, 245),
        TitleBar = Color3.fromRGB(225, 225, 225),
        TitleText = Color3.fromRGB(0, 0, 0),
        Button = Color3.fromRGB(215, 215, 215),
        ButtonText = Color3.fromRGB(0, 0, 0),
        ScrollFrame = Color3.fromRGB(245, 245, 245),
        Element = Color3.fromRGB(225, 225, 225),
        ElementText = Color3.fromRGB(0, 0, 0),
        ToggleOn = Color3.fromRGB(0, 255, 0),
        ToggleOff = Color3.fromRGB(255, 0, 0),
        ToggleButton = Color3.fromRGB(225, 225, 225)
    },
    TrueDark = {
        MainFrame = Color3.fromRGB(0, 0, 0),
        TitleBar = Color3.fromRGB(50, 50, 50),
        TitleText = Color3.fromRGB(255, 255, 255),
        Button = Color3.fromRGB(30, 30, 30),
        ButtonText = Color3.fromRGB(255, 255, 255),
        ScrollFrame = Color3.fromRGB(0, 0, 0),
        Element = Color3.fromRGB(50, 50, 50),
        ElementText = Color3.fromRGB(255, 255, 255),
        ToggleOn = Color3.fromRGB(0, 255, 0),
        ToggleOff = Color3.fromRGB(255, 0, 0),
        ToggleButton = Color3.fromRGB(50, 50, 50)
    },
    Ocean = {
        MainFrame = Color3.fromRGB(0, 0, 128),
        TitleBar = Color3.fromRGB(0, 0, 100),
        TitleText = Color3.fromRGB(255, 255, 255),
        Button = Color3.fromRGB(0, 0, 100),
        ButtonText = Color3.fromRGB(255, 255, 255),
        ScrollFrame = Color3.fromRGB(1, 1, 135),
        Element = Color3.fromRGB(0, 0, 100),
        ElementText = Color3.fromRGB(255, 255, 255),
        ToggleOn = Color3.fromRGB(0, 255, 255),
        ToggleOff = Color3.fromRGB(255, 0, 255),
        ToggleButton = Color3.fromRGB(0, 0, 100),
    },
    Rainbow = {
        MainFrame = Color3.fromRGB(255, 0, 0),
        TitleBar = Color3.fromRGB(255, 165, 0),
        TitleText = Color3.fromRGB(255, 255, 0),
        Button = Color3.fromRGB(0, 255, 0),
        ButtonText = Color3.fromRGB(0, 255, 255),
        ScrollFrame = Color3.fromRGB(0, 0, 255),
        Element = Color3.fromRGB(75, 0, 130),
